<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninemail.mapper.MailUserMapper">

    <resultMap id="mailUserMap" type="com.ninemail.domain.MailUser">
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="created_dt" property="createdDt"/>
        <result column="active" property="active"/>
    </resultMap>

    <insert id="insert" parameterType="com.ninemail.domain.MailUser">
        INSERT INTO MAIL_USER (username, email, password, active)
        VALUES (#{username}, #{email}, #{password}, #{active})
    </insert>

    <select id="findByEmail" resultMap="mailUserMap">
        SELECT * FROM MAIL_USER WHERE email = #{email}
    </select>

    <select id="findByUsername" resultMap="mailUserMap">
        SELECT * FROM MAIL_USER WHERE username = #{username}
    </select>

    <select id="findAll" resultMap="mailUserMap">
        SELECT * FROM MAIL_USER
    </select>

    <update id="updatePassword">
        UPDATE MAIL_USER SET password = #{password} WHERE email = #{email}
    </update>

    <delete id="deleteByEmail">
        DELETE FROM MAIL_USER WHERE email = #{email}
    </delete>

    <select id="countByEmail" resultType="int">
        SELECT COUNT(*) FROM MAIL_USER WHERE email = #{email}
    </select>
</mapper>
